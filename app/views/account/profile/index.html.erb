<div class="columns">

  <div class="column">
    <div class="box">
      <h2 class="title is-5"><%= t('profile.information') %></h2>

      <%= form_for(@user, :url => {:action => "update_user"}) do |f| %>
        <div class="field">
          <%= f.label :lastname, class: 'label' %>
          <div class="control">
            <%= f.text_field :lastname, :autocomplete => "off", class: 'input' %>
          </div>
        </div>
        <div class="field">
          <%= f.label :firstname, class: 'label' %>
          <div class="control">
            <%= f.text_field :firstname, :autocomplete => "off", class: 'input' %>
          </div>
        </div>
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <div class="control">
            <%= f.email_field :email, class: 'input' %>
          </div>
        </div>
        <div class="control">
          <%= f.submit(t('form.save'), class: 'button is-link') %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="column">
    <div class="box">
      <h2 class="title is-5"><%= t('profile.password') %></h2>

      <%= form_for(@user, :url => {:action => "update_password"}) do |f| %>
        <div class="field">
          <%= f.label :password, class: 'label' %>
          <div class="control">
            <%= f.password_field :password, :autocomplete => "off", class: 'input' %>
          </div>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, class: 'label' %>
          <div class="control">
            <%= f.password_field :password_confirmation, class: 'input' %>
          </div>
        </div>
        <div class="control">
          <%= f.submit(t('form.save'), class: 'button is-link') %>
        </div>
      <% end %>
    </div>
  </div>

</div>