<% content_for :content do %>
  <div class="tabs">
    <ul>
      <li class="<%= 'is-active' if controller_name == 'profile' %>">
        <a href="<%= url_for(action: 'index', controller: 'account/profile') %>">
          <span><%= t('navbar.profile') %></span>
        </a>
      </li>
      <li class="<%= 'is-active' if controller_name == 'messages' %>">
        <a href="<%= url_for(action: 'index', controller: 'account/messages') %>">
          <span><%= t('navbar.messages') %></span>
        </a>
      </li>
      <li class="<%= 'is-active' if controller_name == 'contacts' %>">
        <a href="<%= url_for(action: 'index', controller: 'account/contacts') %>">
          <span><%= t('navbar.contacts') %></span>
        </a>
      </li>
    </ul>
  </div>
  <%= yield %>
<% end %>

<%= render template: 'layouts/application' %>