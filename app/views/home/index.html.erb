<div class="columns">
  <div class="column"></div>
  <div class="column is-three-quarters has-text-centered">
    <h1 class="subtitle is-1"><%= t('home.welcome') %></h1>
    <%= form_tag("listings", method: "get") do %>

    <div class="field is-grouped">
      <p class="control is-expanded has-icons-left">

      <input name="search" class="input is-medium" type="text" autofocus placeholder="What are you searching for ?">
        <span class="icon is-small is-left">
          <i class="fa fa-search"></i>
        </span>
      </p>

      <p class="control">
        <%= submit_tag("Search", class: 'button is-medium is-primary') %>

        <!--        <a class="button is-medium is-primary">Search</a>-->
      </p>
    </div>
        <% end %>
  </div>
  <div class="column"></div>
</div>